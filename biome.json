{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "formatWithErrors": true
  },

  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "quoteStyle": "double",
      "trailingCommas": "all"
    }
  },

  "css": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  },

  "files": {
    "ignoreUnknown": true
  }
}
